<%= form_for([@article,@article.comments.build]) do |f| %>
  <div class="field"> 
    <%= f.label :commenter %> <br/>
    <%= f.text_field :"commenter", value: current_user ? current_user.firstname + ' ' + current_user.lastname : ''%> <br/>
  </div>

  <div class="field"> 
    <%= f.label :body%> <br/>
    <%= f.text_area :"body" %> <br/>
  </div>
  <div class="actions"> 
    <%= f.submit %>
  </div>
<% end %>